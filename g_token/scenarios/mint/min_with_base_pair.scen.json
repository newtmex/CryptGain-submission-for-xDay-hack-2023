        {
            "step": "checkState",
            "accounts": {
                "address:user1": {
                    "nonce": "*",
                    "esdt": {
                        "str:BASETK-123456": "160,000",
                        "str:GTK-123456": "18,964",
                        "str:LSLP-123456": "0",
                        "str:LST-123456": "0",
                        "+": ""
                    },
                    "storage": "*",
                    "code": "*",
                    "owner": "*"
                },
                "sc:g_token": {
                    "nonce": "*",
                    "esdt": {
                        "str:BASETK-123456": "23",
                        "str:GTK-123456": {
                            "instances": [
                                {
                                    "nonce": "0",
                                    "balance": "4,000,999",
                                    "attributes": "0x"
                                }
                            ],
                            "roles": [
                                "ESDTRoleLocalMint",
                                "ESDTRoleLocalBurn"
                            ]
