                "to": "sc:g_token",
                "esdtValue": [
                    {
                        "tokenIdentifier": "str:BASETK-123456",
                        "value": "20,000"
                    }
                ],
                "function": "mint",
                "arguments": [
                    "1,50",
                    "str:LST-123456"
                ],
                "gasLimit": "35,000,000",
